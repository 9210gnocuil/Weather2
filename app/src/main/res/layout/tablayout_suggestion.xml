<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="0dp"
    android:id="@+id/main2_sug_cv_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1000"
    app:cardCornerRadius="30dp"
    android:layout_margin="6dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_shushidu" />

                <TextView
                    android:id="@+id/main2_sug_shushidu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适度指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_shushidu_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_xiche" />

                <TextView
                    android:id="@+id/main2_sug_xiche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="洗车指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_xiche_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_chuanyi" />

                <TextView
                    android:id="@+id/main2_sug_chuanyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="穿衣指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_chuanyi_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_ganmao" />

                <TextView
                    android:id="@+id/main2_sug_ganmao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="感冒指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_ganmao_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_yundong" />

                <TextView
                    android:id="@+id/main2_sug_yundong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="运动指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_yundong_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_lvyou" />

                <TextView
                    android:id="@+id/main2_sug_lvyou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="旅游指数"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/main2_sug_lvyou_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>

        </TableRow>

        <TableRow android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/index_big_white_ziwaixian" />

                <TextView
                    android:id="@+id/main2_sug_ziwaixian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="紫外线指数"
                    android:textColor="#FFF"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/main2_sug_ziwaixian_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="舒适"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>


