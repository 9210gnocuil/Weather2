<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:setting="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/static_02" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liucong.weather2.view.SettingView
            android:id="@+id/setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            setting:text="自动更新"
            setting:textDesc="自动更新已经关闭"
            />

        <Button
            android:visibility="gone"
            android:padding="20dp"
            android:id="@+id/setting_btn_updatienterval"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:text="设置自动更新时间"
            android:layout_height="wrap_content" />

    </LinearLayout>




</FrameLayout>
