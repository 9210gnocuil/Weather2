<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:id="@+id/drawer_header_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/icon_drawer_header"
        app:civ_border_color="#2000"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/drawer_header_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_header_icon"
        android:gravity="center_horizontal"
        android:text="liucong0129" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/drawer_header_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_header_user"
        android:gravity="center_horizontal"
        android:text="liucong0129@126.com" />



</RelativeLayout>